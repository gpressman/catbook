<h2>Register for catbook</h2>

<%= form_for [@cat] do |form| %>


<div class="form-group" >


<%= form.label :name %>
<%= form.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
<%= form.label :email%>
<%= form.email_field :email, class: 'email-control' %>
</div>

<div class="form-group" >
<%= form.label :password%>
<%= form.password_field :password, class: 'password-control'%>
<%= form.submit class: 'btn btn primary'%>
	
</div>
<% end %>